import { Component } from '@angular/core'; @Component({ selector: 'app-root', templateUrl: './app.component.html', styleUrls: ['./app.component.css'] }) export class AppComponent { title = 'calculator-app'; public n1: number; public n2: number; public n3: string; public n4: string; public n5: number; AppComponent() { this.n1 = 0; this.n2 = 0; this.n3 = ""; this.n4 = ""; this.n5 = 0; } add() { this.n5 = 0; if (this.n1 == NaN && this.n2 === NaN) { this.n3 = `0`; return; } this.n3 = `${this.n1} + ${this.n2} = ${this.n1 + this.n2}`; } sub() { this.n5 = 0; if (this.n1 == NaN && this.n2 === NaN) { this.n3 = `0`; return; } this.n3 = `${this.n1} - ${this.n2} = ${this.n1 - this.n2}` }
